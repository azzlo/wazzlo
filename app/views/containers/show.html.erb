<div class="container">
  
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @container.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @container.address %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @container.location %>
  </p>

  <p>
    <strong>State:</strong>
    <%= @container.state %>
  </p>

  <p>
    <strong>Lat:</strong>
    <%= @container.lat %>
  </p>

  <p>
    <strong>Long:</strong>
    <%= @container.long %>
  </p>
  <p><i>[<a href="https://google.com/maps/@<%= @container.lat %>,<%= @container.long %>,21z" target="_blank">View on google maps</a>]</i></p>

  <p>
    <strong>Last sensor:</strong>
    <%= @container.last_sensor || '*Not defined*' %>
    cm
  </p>
  <p><i><strong><%= @container.current_capacity_percentage %> % capacity</strong></i></p>

  <p>
    <strong>High sensor:</strong>
    <%= @container.high_sensor || '*Not defined*' %>
    cm
  </p>

  <p>
    <strong>Low sensor:</strong>
    <%= @container.low_sensor || '*Not defined*' %>
    cm
  </p>

  <p>
    <strong>High capacity:</strong>
    <%= @container.high_capacity %>
    liters
  </p>

  <p>
    <strong>Low capacity:</strong>
    <%= @container.low_capacity %>
    liters
  </p>

  <p>
    <strong>Sensor Token</strong>
    <%= @container.sensor_token %>
  </p>

  <p>
    <strong>Last sensor contact:</strong>
    <%= @container.contact_sensor_at %>
  </p>

  <p><strong>Click here to <%= link_to 'view history container', container_container_histories_path(@container) %></strong></p>

  <%= link_to 'Edit', edit_container_path(@container) %> |
  <%= link_to 'Back', containers_path %>
</div>
