<div class="container">
  
  <p id="notice"><%= notice %></p>

  <h1>Containers</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Location</th>
        <th>State</th>
        <th>Lat</th>
        <th>Long</th>
        <th>Last sensor</th>
        <th>High sensor</th>
        <th>Low sensor</th>
        <th>High capacity</th>
        <th>Low capacity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @containers.each do |container| %>
        <tr>
          <td><%= container.name %></td>
          <td><%= container.address %></td>
          <td><%= container.location %></td>
          <td><%= container.state %></td>
          <td><%= container.lat %></td>
          <td><%= container.long %></td>
          <td><%= container.last_sensor %></td>
          <td><%= container.high_sensor %></td>
          <td><%= container.low_sensor %></td>
          <td><%= container.high_capacity %></td>
          <td><%= container.low_capacity %></td>
          <td><%= link_to 'Show', container %></td>
          <td><%= link_to 'Edit', edit_container_path(container) %></td>
          <td><%= link_to 'Destroy', container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Container', new_container_path %>
</div>
