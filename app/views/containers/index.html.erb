<div class="container">
  
  <p id="notice"><%= notice %></p>

  <h1>Contenedores</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Direcci√≥n</th>
        <th>Localidad</th>
        <th>Estado</th>
        <th>Latitud</th>
        <th>Longitud</th>
        <th>Ultimo val sensor</th>
        <th>Max. sensor</th>
        <th>Min. sensor</th>
        <th>Max capacidad</th>
        <th>Min capacidad</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @containers.each do |container| %>
        <tr>
          <td><%= container.name %></td>
          <td><%= container.address %></td>
          <td><%= container.location %></td>
          <td><%= container.state %></td>
          <td><%= container.lat %></td>
          <td><%= container.long %></td>
          <td><%= container.last_sensor %></td>
          <td><%= container.high_sensor %></td>
          <td><%= container.low_sensor %></td>
          <td><%= container.high_capacity %></td>
          <td><%= container.low_capacity %></td>
          <td><%= link_to 'Ver', container, class: 'btn btn-sm btn-info' %></td>
          <td><%= link_to 'Editar', edit_container_path(container), class: 'btn btn-sm btn-warning' %></td>
          <td><%= link_to 'Eliminar', container, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '+ Nuevo contenedor', new_container_path, class: 'btn btn-primary' %>
</div>
