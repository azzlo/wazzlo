<!DOCTYPE html>
<html>
  <head>
    <title>Wazzlo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <li><%= link_to 'Inicio', root_path, class: "#{'active' if controller_name == 'home'}" %></li>
          <li><%= link_to 'Contenedores', containers_path, class: "#{'active' if controller_name == 'containers'}" %></li>
        </ul>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
